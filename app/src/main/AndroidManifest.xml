<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mvde028_intent_injection_poc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MVDE028_intent_injection_poc">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>

        <activity
            android:name=".SecondActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".LeakActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".FishingActivity"
            android:exported="true">
                <intent-filter android:autoVerify="true">
                    <action android:name="android.intent.action.VIEW" />
                    <category android:name="android.intent.category.DEFAULT" />
                    <category android:name="android.intent.category.BROWSABLE" />

                    <!-- Schemes -->
                    <data android:scheme="http" />
                    <data android:scheme="https" />

                    <!-- Domains -->
                    <data android:host="www.eldorado.ru" />

                    <!-- Paths -->
                    <data android:path="/" />
                    <data android:pathPrefix="/wish-list/" />
                    <data android:pathPrefix="/cat/detail/" />
                    <data android:pathPrefix="/c/" />
                    <data android:pathPrefix="/sem/v3/" />
                </intent-filter>
        </activity>
    </application>

</manifest>